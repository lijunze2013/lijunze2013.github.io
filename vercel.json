{
  "builds": [
    { "src": "app.py", "use": "@vercel/python" },
    { "src": "templates/**/*.html", "use": "@vercel/static" },
    { "src": "static/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "app.py" },
    { "src": "/admin/(.*)", "dest": "app.py" },
    { "src": "/(.*)", "dest": "app.py" }
  ]
}
    